<mvc:View
  controllerName="Lab_10.Lab_10.controller.Worklist"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">

  <Page>
    <customHeader>
      <Toolbar>
        <Title text="{= ${i18n>countItems} + ' (' + ${worklistView>/sCount} + ')'}" />
        <ToolbarSpacer />
        <Button text="{i18n>toggleGroup}" press="onGroupRegionText" />
      </Toolbar>
    </customHeader>
    <content>
      <Table
        id="table"
        backgroundDesign="Translucent"
        busy="{worklistView/isBusy}"
        items="{
          path: '/zjblessons_base_Headers',
          sorter: {
            path: 'DocumentNumber',
            descending: true
          }
        }" >

        <columns>
          <Column>
            <Text text="{i18n>DocumentNumber}" />
          </Column>
          <Column>
            <Text text="{i18n>DocumentDate}" />
          </Column>
          <Column>
            <Text text="{i18n>PlantText}" />
          </Column>
          <Column>
            <Text text="{i18n>RegionText}" />
          </Column>
          <Column>
            <Text text="{i18n>Description}" />
          </Column>
          <Column>
            <Text text="{i18n>DescriptionChange}" />
          </Column>
          <Column>
            <Text text="{i18n>Created}" />
          </Column>
        </columns>

        <items>
          <ColumnListItem highlight="{= ${DocumentNumber} ? ${DocumentNumber}.indexOf('DocumentNumber') !== -1 ? 'Success' : 'Error' : 'Error' }">
            <cells>
              <Text text="{DocumentNumber}" />
              <Text text="{
                path: 'DocumentDate',
                formatter: '.formatter.formatDate'}"
              />
              <Text text="{PlantText}" />
              <Text text="{RegionText}" />
              <Text text="{Description}" />
              <Input
                value=""
                placeholder="{Description}"
                liveChange="onChangeDescription" />
              <Text text="{
                path: 'Created',
                formatter: '.formatter.formatDate'}"
              />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
  </Page>

</mvc:View>