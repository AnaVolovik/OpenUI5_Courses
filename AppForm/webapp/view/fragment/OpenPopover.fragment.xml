<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="menuPopover"
		showHeader="false"
		contentWidth="320px"
		contentHeight="500px"
		placement="Bottom"
		ariaLabelledBy="master-title">
		<NavContainer
			id="navContainer">
			<Page
				id="pagePopover"
				class="sapUiResponsivePadding--header">
				<List
					id="listMenuItems"
					items="{navButtons>/buttons}" >
					<StandardListItem
						title="{navButtons>name}"
						type="Active"
						press="onMenuItemPress" />
				</List>
			</Page>
		</NavContainer>
	</Popover>
</core:FragmentDefinition>