<mvc:View controllerName="AppForm.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page title="{i18n>title}" class="sapUiContentPadding">
				<content>
					<VBox>
						<VBox >
							<Label text="{i18n>Name}" labelFor="idName"/>
							<Input
								id="idName"
								maxLength="64"
								liveChange="_onNameInputLiveChange"
							/>
						</VBox>
						<VBox>
							<Label text="{i18n>Surname}" labelFor="idSurname"/>
							<Input
								id="idSurname"
								maxLength="64"
								liveChange="_onNameInputLiveChange"
							/>
						</VBox>
						<VBox>
							<Label text="{i18n>City}" labelFor="idCity"/>
							<Select
								selectedKey="{idCity}"
								items= "{
									path: 'cityModel>/cities'
								}"
								width="100%"
							>
								<items>
									<core:Item key="{cityModel>id}" text="{cityModel>name}" />
								</items>
							</Select>
						</VBox>
						<VBox>
							<Label text="{i18n>PhoneNumber}" labelFor="idPhoneNumber"/>
							<Input
								id="idPhoneNumber"
								type="Tel"
								liveChange="_onPhoneInputLiveChange"
							/>
						</VBox>
						<VBox>
							<Label text="{i18n>Email}" labelFor="idEmail"/>
							<Input
								id="idEmail"
								type="Email"
								maxLength="256"
								liveChange="_onEmailInputLiveChange"
							/>
						</VBox>
						<VBox>
							<Label text="{i18n>Password}" labelFor="idPassword"/>
							<Input
								id="idPassword"
								type="Password"
								maxLength="64"
								liveChange="_onPasswordInputLiveChange"
							/>
						</VBox>
						<VBox>
							<Label text="{i18n>ConfirmPassword}" labelFor="idConfirmPassword"/>
							<Input
								id="idConfirmPassword"
								type="Password"
								maxLength="64"
								liveChange="_onRepeatPasswordInputLiveChange"
							/>
						</VBox>
						<VBox>
							<CheckBox id="termsCheckbox" 
								text="{i18n>UserConditions}" 
								selected="false" />
						</VBox>
						<Button
							text="{i18n>RegButton}"
							type="Emphasized"
							press="onRegister"
							class="sapUiMediumMarginTop"
						/>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>