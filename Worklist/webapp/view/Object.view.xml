<mvc:View
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		showFooter="false"
	>
		<customHeader>
			<Bar>
				<contentLeft>
					<Title
						text="{DocumentNumber}"
					/>
				</contentLeft>
				<contentRight>
					<Button
						type="Emphasized"
						press="onPressEdit"
						text="{i18n>EditButtonText}"
						icon="{i18n>iEditButton}"
						visible="{= !${objectView>/bEditMode}}"
					/>
					<Button
						type="Emphasized"
						press="onPressSave"
						text="{i18n>SaveButtonText}"
						icon="{i18n>iSaveButton}"
						visible="{= ${objectView>/bEditMode}}"
					/>
					<Button
						type="Transparent"
						press="onPressCancel"
						text="{i18n>CancelButtonText}"
						icon="{i18n>iCancelButton}"
						visible="{= ${objectView>/bEditMode}}"
					/>
					<Button
						type="Transparent"
						press=""
						text="{i18n>DeleteButtonText}"
						icon="{i18n>iDeleteButton}"
					/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<IconTabBar
				expandable="false"
				headerMode="Inline"
				selectedKey="{= ${objectView>/sSelectedTab}}">

				<items>
					<IconTabFilter key="list" text="{i18n>list}" icon="{i18n>iList}">
					
					</IconTabFilter>
					<IconTabFilter key="form" text="{i18n>form}" icon="{i18n>iForm}">
					
					</IconTabFilter>
				</items>
				
			</IconTabBar>
		</content>
	</Page>

</mvc:View>