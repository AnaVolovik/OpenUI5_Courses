<mvc:View xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		showFooter="false"
	>
		<customHeader>
			<Bar>
				<contentLeft>
					<Title
						text="{= ${objectView>/bEditMode} ? 'EditMode' : ${DocumentNumber}}"
					/>
				</contentLeft>
				<contentRight>
					<Button
						type="Emphasized"
						press="onPressEdit"
						text="{i18n>EditButtonText}"
						icon="{i18n>iEditButton}"
						visible="{= !${objectView>/bEditMode}}"
					/>
					<Button
						type="Emphasized"
						press="onPressSave"
						text="{i18n>SaveButtonText}"
						icon="{i18n>iSaveButton}"
						visible="{= ${objectView>/bEditMode}}"
					/>
					<Button
						type="Transparent"
						press="onPressCancel"
						text="{i18n>CancelButtonText}"
						icon="{i18n>iCancelButton}"
						visible="{= ${objectView>/bEditMode}}"
					/>
					<Button
						type="Transparent"
						press="onPressDelete"
						text="{i18n>DeleteButtonText}"
						icon="{i18n>iDeleteButton}"
						visible="{= ${Version} === 'D' }"
					/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<IconTabBar
				expandable="false"
				headerMode="Inline"
				selectedKey="{= ${objectView>/sSelectedTab}}">

				<items>
					<IconTabFilter key="list" text="{i18n>list}" icon="{i18n>iList}">
						<VBox>
							<List>
								<CustomListItem>
									<VBox class="sapUiContentPadding">
										<Label
											labelFor="idDocumentNumberObj"
											text="{i18n>DocumentNumber}"
										/>
										<Input
											id="idDocumentNumberObj"
											editable="{= ${objectView>/bEditMode}}"
											value="{DocumentNumber}"
										/>
									</VBox>
								</CustomListItem>
								<CustomListItem>
									<VBox class="sapUiContentPadding">
										<Label
											labelFor="idRegionTextObj"
											text="{i18n>RegionText}"
										/>
										<Select
											editable="{= ${objectView>/bEditMode}}"
											selectedKey="{idRegionTextObj}"
											items= "{
												path: '/zjblessons_base_Regions'
											}"
										>
											<items>
												<core:Item key="{idRegionTextObj}" text="{RegionText}" />
											</items>
										</Select>
									</VBox>
								</CustomListItem>
								<CustomListItem>
									<VBox class="sapUiContentPadding">
										<Label
											labelFor="idPlantTextObj"
											text="{i18n>PlantText}"
										/>
										<ComboBox
											id="idPlantTextComboBox"
											editable="{= ${objectView>/bEditMode}}"
											selectedKey="{idPlantTextObj}"
										>
										</ComboBox>
									</VBox>
								</CustomListItem>
								<CustomListItem>
									<VBox class="sapUiContentPadding">
										<Label
											labelFor="idDescriptionObj"
											text="{i18n>Description}"
										/>
										<TextArea
											id="idDescriptionObj"
											editable="{= ${objectView>/bEditMode}}"
											rows="5"
											value="{Description}"
										/>
									</VBox>
								</CustomListItem>
							</List>
						</VBox>
					</IconTabFilter>
					<IconTabFilter key="form" text="{i18n>form}" icon="{i18n>iForm}">
						<VBox>
								<f:Form id="formObjectDocument"
									editable="false">
									<f:title>
										<core:Title text="{DocumentNumber}" />
									</f:title>
									<f:layout>
										<f:ResponsiveGridLayout
											labelSpanXL="4"
											labelSpanL="3"
											labelSpanM="4"
											labelSpanS="12"
											adjustLabelSpan="false"
											emptySpanXL="0"
											emptySpanL="4"
											emptySpanM="0"
											emptySpanS="0"
											columnsXL="2"
											columnsL="1"
											columnsM="1"
											singleContainerFullSize="false" />
									</f:layout>
									<f:formContainers>
										<f:FormContainer title="{i18n>formColumnTitleOne}">
											<f:formElements>
												<form:FormElement label="{i18n>DocumentNumber}">
													<Text text="{DocumentNumber}"/>
												</form:FormElement>
												<form:FormElement label="{i18n>PlantText}">
													<Text text="{PlantText}"/>
												</form:FormElement>
												<form:FormElement label="{i18n>RegionText}">
													<Text text="{RegionText}"/>
												</form:FormElement>
												<form:FormElement label="{i18n>Description}">
													<Text text="{Description}"/>
												</form:FormElement>
											</f:formElements>
										</f:FormContainer>
										<f:FormContainer title="{i18n>formColumnTitleTwo}">
											<f:formElements>
												<form:FormElement label="{i18n>Created}">
													<Text text="{Created}"/>
												</form:FormElement>
												<form:FormElement label="{i18n>CreatedByFullName}">
													<Text text="{CreatedByFullName}"/>
												</form:FormElement>
												<form:FormElement label="{i18n>Modified}">
													<Text text="{Modified}"/>
												</form:FormElement>
												<form:FormElement label="{i18n>ModifiedByFullName}">
													<Text text="{ModifiedByFullName}"/>
												</form:FormElement>
											</f:formElements>
										</f:FormContainer>
									</f:formContainers>
								</f:Form>
							</VBox>
					</IconTabFilter>
				</items>
				
			</IconTabBar>
		</content>
	</Page>

</mvc:View>